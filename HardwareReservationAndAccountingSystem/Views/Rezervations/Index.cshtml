
@{
    ViewBag.Title = "Rezervacijos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PageHeaderTitle {
    <h2>Rezervacijos</h2>
}

@section PageHeaderSubNavLinks {
    <ul>
        <li class="active"><a href="#">Visos rezervacijos</a></li>
        <li><a href="#">Laukiančios patvirtinimo</a></li>
        <li><a href="#">Aktyvios</a></li>
        <li><a href="#">Baigtos</a></li>
    </ul>
}

@section PageHeaderFilters {
    <div class="page-filters">
        <input type="text" placeholder="Filtruoti duomenis" class="form-control" />
    </div>
}

<div class="row">
    <div id="calendar"></div>
</div>

<div class="modal fade" id="reservationModal" tabindex="-1" role="dialog" aria-labelledby="reservationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Rezervacijos kūrimas</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="formGroupExampleInput">Rezervuoti nuo</label>
                    <input type="text" class="form-control" id="formGroupExampleInput" value="2018-05-27 12:00">
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput">Rezervuoti iki</label>
                    <input type="text" class="form-control" id="formGroupExampleInput" value="2018-05-30 12:00">
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput">Pasirinkite įrangos komplektą, kuris yra laisvas jūsų norimu laiku</label>
                    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Filtruoti duomenis">
                </div>
                <div class="form-group">
                    <div class="equipment-list">
                        <div class="row">
                            <div class="col-md-4">
                                <img src="http://via.placeholder.com/200x200" />
                                <h4>Fotoaparatas Canon EOS 700D</h4>
                            </div>
                            <div class="col-md-4">
                                <img src="http://via.placeholder.com/200x200" />
                                <h4>Kamera JVS HD955</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Uždaryti</button>
                <button type="button" class="btn btn-primary">Išsaugoti</button>
            </div>
        </div>
    </div>
</div>