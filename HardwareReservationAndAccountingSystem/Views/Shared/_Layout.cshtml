<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css" integrity="sha384-+d0P83n9kaQMCwj8F4RJB66tzIwOKmrdb46+porD/OvrJ+37WqIM7UoBtwHO6Nlg" crossorigin="anonymous">
</head>
<body>

    <div class="container-fluid layout">
        <div class="row">
            <div class="col-lg-2 col-md-12 left-sidebar">
                @Html.Partial("_LeftSidebar")
            </div>
            <div class="col-lg-10 col-md-12 page-content-container">
                <div class="page-header">
                    <div class="row">
                        <div class="col page-title">
                            @RenderSection("PageHeaderTitle")
                        </div>
                        <div class="col page-sub-nav">
                            @RenderSection("PageHeaderSubNavLinks", required: false)
                        </div>
                    </div>
                    @RenderSection("PageHeaderFilters", required: false)
                </div>

                <div class="page-content">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

