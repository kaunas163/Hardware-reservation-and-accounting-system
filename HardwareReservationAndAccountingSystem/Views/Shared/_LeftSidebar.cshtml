@using Microsoft.AspNet.Identity
<div class="logo">
    <h1>@Html.ActionLink("Techninės įrangos rezervacija", "Index", "Home")</h1>
</div>

<div class="profile">
    <img src="http://via.placeholder.com/120x120" alt="Profile picture" />
    
    @if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
        {
            @Html.AntiForgeryToken()

            <p>@User.Identity.GetUserName()</p>
            <p>@(User.IsInRole("admin") ? "Administratorius" : null)</p>

            @*@Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*@
            <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-primary btn-sm">Atsijungti</a>
        }
    }

</div>

<div class="navbar-links">
    <ul class="first-level">
        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">
            @Html.ActionLink("Pradžia", "Index", "Home")
        </li>
        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Notifications" ? "active" : "")">
            @Html.ActionLink("Pranešimai", "Index", "Notifications")
        </li>
        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Rezervations" ? "active" : "")">
            @Html.ActionLink("Rezervacijos", "Index", "Rezervations")
        </li>
        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Calendar" ? "active" : "")">
            @Html.ActionLink("Kalendorius", "Index", "Calendar")
        </li>
        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Equipments" ? "active" : "")">
            @Html.ActionLink("Įranga", "Index", "Equipments")
        </li>
        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "EquipmentTypes" ? "active" : "")">
            @Html.ActionLink("Įrangos tipai", "Index", "EquipmentTypes")
        </li>
        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "EquipmentBundles" ? "active" : "")">
            @Html.ActionLink("Įrangos komplektai", "Index", "EquipmentBundles")
        </li>
    </ul>
</div>

<footer>
    <p>Visos teisės saugomos &copy; @DateTime.Now.Year</p>
</footer>