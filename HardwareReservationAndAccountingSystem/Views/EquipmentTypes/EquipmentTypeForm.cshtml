@model HardwareReservationAndAccountingSystem.Models.EquipmentType

@using (Html.BeginForm("Save", "EquipmentTypes"))
{
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">@(Model.Id == 0 ? "Naujo įrangos tipo įvedimas" : "Įrangos tipo atnaujinimas")</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            @Html.LabelFor(x => x.Title)
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Color)
            @Html.TextBoxFor(x => x.Color, new { @class = "form-control" })
        </div>

        @Html.HiddenFor(x => x.Id)

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Atšaukti</button>
        <button type="submit" class="btn btn-primary">Išsaugoti</button>
    </div>
}