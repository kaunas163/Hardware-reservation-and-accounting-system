@model HardwareReservationAndAccountingSystem.ViewModels.EquipmentForm

@using (Html.BeginForm("Save", "Equipments"))
{
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Naujos įrangos įvedimas</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            @Html.LabelFor(x => x.Equipment.Title)
            @Html.TextBoxFor(x => x.Equipment.Title, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Equipment.Description)
            @Html.TextAreaFor(x => x.Equipment.Description, new { @class = "form-control" })
        </div>
        
        <div class="form-group">
            @Html.LabelFor(m => m.Equipment.EquipmentTypeId)
            @Html.DropDownListFor(m => m.Equipment.EquipmentTypeId, new SelectList(Model.EquipmentTypes, "Id", "Title"), "", new { @class = "form-control" })
        </div>

        @Html.HiddenFor(x => x.Equipment.Id)

        @* <button type="submit" class="btn btn-primary">Save</button>*@

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Atšaukti</button>
        <button type="submit" class="btn btn-primary">Išsaugoti</button>
    </div>
}