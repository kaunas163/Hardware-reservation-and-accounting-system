@model HardwareReservationAndAccountingSystem.ViewModels.RemoveEquipmentFromBundle

@using (Html.BeginForm("RemoveEquipment", "EquipmentBundles"))
{
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Šalinti įrangą iš komplekto</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        Ar tikrai norite šalinti "@Model.Equipment.Title" iš komplekto "@Model.EquipmentBundle.Title"?
        @*@Html.HiddenFor(x => Model.EquipmentBundle.Id)
        @Html.HiddenFor(x => Model.Equipment.Id)*@
        <input name="EquipmentId" value="@Model.Equipment.Id" type="hidden"/>
        <input type="hidden" name="EquipmentBundleId" value="@Model.EquipmentBundle.Id" />
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Atšaukti</button>
        <button type="submit" class="btn btn-primary">Šalinti</button>
    </div>
}